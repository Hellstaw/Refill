<Window x:Class="WpfApp2.deletefuell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заправка" Height="380" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20">

        <TextBlock Text="Выберите колонку:" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox x:Name="KolonkaComboBox" 
                 FontSize="14" 
                 Padding="5"
                 Height="30"
                 Margin="0,0,0,15"
                 SelectionChanged="KolonkaComboBox_SelectionChanged"/>

        <TextBlock Text="Тип топлива:" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox x:Name="FuelTypeComboBox" 
                 FontSize="14" 
                 Padding="5"
                 Height="30"
                 Margin="0,0,0,15"
                 SelectionChanged="FuelTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="92"/>
            <ComboBoxItem Content="95"/>
            <ComboBoxItem Content="ДТ"/>
        </ComboBox>

        <TextBlock Text="Количество литров:" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <TextBox x:Name="QuantityTextBox" 
                 FontSize="14" 
                 Padding="5"
                 Height="30"
                 Margin="0,0,0,15"/>

        <TextBlock Text="Тип оплаты:" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox x:Name="PaymentTypeComboBox" 
                 FontSize="14" 
                 Padding="5"
                 Height="30"
                 Margin="0,0,0,20">
            <ComboBoxItem Content="Наличные"/>
            <ComboBoxItem Content="Карта"/>
            <ComboBoxItem Content="Безналичные"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RefuelButton"  
                Content="Заправить" 
                    Click="RefuelButton_Click"
                    Padding="15,5"
                    IsDefault="True"
                    Margin="0,0,10,0"/>
                <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Padding="15,5"
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>