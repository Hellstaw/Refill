<Window x:Class="WpfApp2.deletefuell"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод данных" 
        Height="250" 
        Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="20">

        <TextBlock Text="Выберите вариант:" 
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <ComboBox x:Name="InputComboBox" 
                 FontSize="14" 
                 Padding="5"
                 Height="30"
                 Margin="0,0,0,15">
            <!-- Элементы ComboBox можно добавить здесь -->
            <ComboBoxItem Content="92"/>
            <ComboBoxItem Content="95"/>
            <ComboBoxItem Content="ДТ"/>
        </ComboBox>
        <TextBlock Text="Введите количество:" 
            FontSize="14"
            Margin="0,0,0,5"/>

        <TextBox x:Name="InputTextBox" 
          FontSize="14" 
          Padding="5"
          Height="30"
          Margin="0,0,0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" 
                    Click ="AddingFuell"
                    Padding="15,5"
                    IsDefault="True"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click" 
                    Padding="15,5"
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>