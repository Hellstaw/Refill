<Window x:Class="WpfApp2.LoginReg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f5f5f5">
        <Border Background="White" 
                Margin="30" 
                CornerRadius="10"
                BorderBrush="#e0e0e0" 
                BorderThickness="1">

            <StackPanel Margin="40,0,40,0" VerticalAlignment="Center" Height="304">

                <!-- Заголовок -->

                <!-- Логин -->
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#333333"
                          />

                <!-- Логин -->
                <TextBlock Text="Логин:" 
                          Foreground="#666666"
                          FontSize="14"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="txtUsername" 
                        Height="45"
                        FontSize="16"
                        Padding="12"
                        BorderBrush="#cccccc"
                        BorderThickness="1"
                        VerticalContentAlignment="Center"
                        Margin="0,0,0,20"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль:" 
                          Foreground="#666666"
                          FontSize="14"
                          Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword" 
                            Height="45"
                            FontSize="16"
                            Padding="12"
                            BorderBrush="#cccccc"
                            BorderThickness="1"
                            VerticalContentAlignment="Center"
                            Margin="0,0,0,30"/>
                <Button x:Name="btnLogin" 
                        Content="Войти" 
                        Height="45"
                        Background="#0078d4"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="btnLogin_Click"
                        Cursor="Hand"/>

                <!-- Кнопка входа -->

            </StackPanel>
        </Border>
    </Grid>
</Window>