<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Управление Колонками" Height="450" Width="800">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" 
                          ShadowDepth="2" 
                          Opacity="0.1" 
                          BlurRadius="8" 
                          Color="Black"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель с TextBox -->
            <RowDefinition Height="*"/>
            <!-- Основное содержание -->
            <RowDefinition Height="Auto"/>
            <!-- Футер -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель с 4 квадратными TextBox -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20" 
                BorderThickness="0,0,0,1" 
                BorderBrush="#E0E0E0"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" 
                           Text="Управление колонками" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- TextBox и подписи -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Колонка 1 -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#3498DB" 
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="2">
                            <TextBox x:Name="PetrolPump1"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#2C3E50"
                                     Height="60"
                                     Width="60"
                                     IsReadOnly="True"/>
                        </Border>
                        <TextBlock Text="Колонка 1" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   FontSize="12"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Колонка 2 -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#2ECC71" 
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="2">
                            <TextBox x:Name="PetrolPump2" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#2C3E50"
                                     Height="60"
                                     Width="60"
                                     IsReadOnly="True"/>
                        </Border>
                        <TextBlock Text="Колонка 2" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   FontSize="12"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Колонка 3 -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#E74C3C" 
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="2">
                            <TextBox x:Name="PetrolPump3"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#2C3E50"
                                     Height="60"
                                     Width="60"
                                     IsReadOnly="True"/>
                        </Border>
                        <TextBlock Text="Колонка 3" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   FontSize="12"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Колонка 4 -->
                    <StackPanel Grid.Column="6" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#F39C12" 
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="2">
                            <TextBox x:Name="PetrolPump4" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Center"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#2C3E50"
                                     Height="60"
                                     Width="60"
                                     IsReadOnly="True"/>
                        </Border>
                        <TextBlock Text="Колонка 4" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"
                                   FontSize="12"
                                   Foreground="#7F8C8D"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <!-- Кнопка Заправить -->
                    <Border Background="#3498DB" 
                            CornerRadius="6"
                            Margin="0,0,7,0"
                            Cursor="Hand">
                        <Button Content="Заправить" 
                                Padding="20,8"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                Cursor="Hand" Click="Button_Click"/>
                    </Border>

                    <!-- Кнопка Пополнить -->
                    <Border Background="#2ECC71" 
                            CornerRadius="6"
                            Margin="7,0,7,0"
                            Cursor="Hand">
                        <Button Content="Пополнить" 
                                Padding="20,8"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                Cursor="Hand"/>
                    </Border>

                    <!-- Кнопка Обновить -->
                    <Border Background="#F39C12" 
                            CornerRadius="6"
                            Margin="7,0,0,0"
                            Cursor="Hand">
                        <Button Content="Логи" 
                                Padding="20,8"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                Cursor="Hand" Click="ViewSessionsButton_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержание -->
        <ScrollViewer Grid.Row="1" Background="#F8F9FA">
            <StackPanel Margin="25">
                <TextBlock Text="Основное история покупок" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"
                           Margin="0,0,0,25"/>

                <!-- Пример контента -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="История" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,12"/>
                        <DataGrid x:Name="UsersDataGrid" 
          AutoGenerateColumns="True"
          IsReadOnly="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Футер -->
        <StatusBar Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Text="Готово" Foreground="#2C3E50" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="v1.1" Foreground="#95A5A6" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>