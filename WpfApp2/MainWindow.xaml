<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Управление Колонками" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Тени -->
        <DropShadowEffect x:Key="CardShadow" 
                          ShadowDepth="0" 
                          Opacity="0.1" 
                          BlurRadius="12" 
                          Color="Black"/>
        
        <DropShadowEffect x:Key="ButtonShadow" 
                          ShadowDepth="0" 
                          Opacity="0.2" 
                          BlurRadius="8" 
                          Color="Black"/>
        
        <!-- Стили -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PumpBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="25" 
                BorderThickness="0,0,0,1" 
                BorderBrush="#F1F5F9"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Rectangle Width="24" Height="24" Fill="#3B82F6" Margin="0,0,12,0" RadiusX="4" RadiusY="4"/>
                    <TextBlock Text="Управление колонками" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Колонки -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Колонка 1 -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#3B82F6" 
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="3"
                                Effect="{StaticResource CardShadow}">
                            <TextBox x:Name="PetrolPump1" Style="{StaticResource PumpBox}"/>
                        </Border>
                        <TextBlock Text="Колонка 1" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <!-- Колонка 2 -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#10B981" 
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="3"
                                Effect="{StaticResource CardShadow}">
                            <TextBox x:Name="PetrolPump2" Style="{StaticResource PumpBox}"/>
                        </Border>
                        <TextBlock Text="Колонка 2" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <!-- Колонка 3 -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#EF4444" 
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="3"
                                Effect="{StaticResource CardShadow}">
                            <TextBox x:Name="PetrolPump3" Style="{StaticResource PumpBox}"/>
                        </Border>
                        <TextBlock Text="Колонка 3" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#64748B"/>
                    </StackPanel>

                    <!-- Колонка 4 -->
                    <StackPanel Grid.Column="6" HorizontalAlignment="Center">
                        <Border Background="White" 
                                BorderBrush="#F59E0B" 
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="3"
                                Effect="{StaticResource CardShadow}">
                            <TextBox x:Name="PetrolPump4" Style="{StaticResource PumpBox}"/>
                        </Border>
                        <TextBlock Text="Колонка 4" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#64748B"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    
                    <!-- Кнопка Заправить -->
                    <Border Background="#3B82F6" 
                            CornerRadius="8"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Effect="{StaticResource ButtonShadow}">
                        <Button Content="Пополнить" 
                                Style="{StaticResource ModernButton}"
                                Click="Button_Click"/>
                    </Border>

                    <!-- Кнопка Пополнить -->
                    <Border Background="#10B981" 
                            CornerRadius="8"
                            Margin="10,0,10,0"
                            Cursor="Hand"
                            Effect="{StaticResource ButtonShadow}">
                        <Button Content="Заправить" 
                                Style="{StaticResource ModernButton}" Click="Button_Click_2"/>
                    </Border>

                    <!-- Кнопка Логи -->
                    <Border Background="#F59E0B" 
                            CornerRadius="8"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            Effect="{StaticResource ButtonShadow}">
                        <Button Content="Логи" 
                                Style="{StaticResource ModernButton}"
                                Click="ViewSessionsButton_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержание -->
        <ScrollViewer Grid.Row="1" Background="#F8FAFC" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Заголовок секции -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Rectangle Width="4" Height="20" Fill="#3B82F6" Margin="0,0,12,0" RadiusX="2" RadiusY="2"/>
                    <TextBlock Text="История операций" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#1E293B"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Карточка с данными -->
                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="0"
                        BorderThickness="1"
                        BorderBrush="#F1F5F9"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Заголовок таблицы -->
                        <Border Grid.Row="0" 
                                Background="#F8FAFC" 
                                CornerRadius="12,12,0,0"
                                BorderThickness="0,0,0,1"
                                BorderBrush="#F1F5F9"
                                Padding="20,15">
                            <TextBlock Text="Последние транзакции" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="#475569"/>
                        </Border>
                        
                        <!-- Таблица -->
                        <DataGrid x:Name="UsersDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  Background="White"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F8FAFC"
                                  HorizontalGridLinesBrush="#F1F5F9"
                                  VerticalGridLinesBrush="#F1F5F9"
                                  FontSize="13"
                                  Padding="20"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Футер -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0"
                Padding="15,10">
            <Grid>
                <TextBlock Text="Готово к работе" 
                           Foreground="#64748B" 
                           FontSize="12"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Rectangle Width="6" Height="6" Fill="#10B981" RadiusX="3" RadiusY="3" Margin="0,0,8,0"/>
                    <TextBlock Text="v1.1 • Стабильная версия" 
                               Foreground="#94A3B8" 
                               FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>